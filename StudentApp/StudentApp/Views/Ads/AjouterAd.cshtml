@using StudentApp.ViewModels.Ads
@{
    ViewBag.Title = "Ajouter Campagnes publicitaires";
    ViewBag.pTitle = "Ajouter Campagnes publicitaires";
    ViewBag.pageTitle = "asp-forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AjouterAdVM


@section styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<form method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label asp-for="DateDebut" class="form-label">Date Fin</label>
                                    <input asp-for="DateDebut" class="form-control" placeholder="Date Debut"><br />
                                    <span asp-validation-for="DateDebut" class="text-danger"></span><br />
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-xxl-3 col-md-6">

                                <div>
                                    <label asp-for="DateFin" class="form-label">Date Fin</label>
                                    <input asp-for="DateFin" class="form-control" placeholder="Date Fin"><br />
                                    <span asp-validation-for="DateFin" class="text-danger"></span>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label asp-for="Budget" class="form-label">Budget</label>
                                    <input asp-for="Budget" class="form-control" placeholder="Budget"><br />
                                    <span asp-validation-for="Budget" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!--end row-->
                        <div>
                            <div class="row g-3">
                                <div class="col-lg-6">
                                    <label asp-for="ContentUrl" class="form-label">Content URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text"
                                              id="basic-addon3">https://example.com/...</span>
                                        <input asp-for="ContentUrl" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"><br />
                                    </div>
                                    <span asp-validation-for="ContentUrl" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="AdUrl" class="form-label">Ad URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text"
                                              id="basic-addon3">https://example.com/...</span>
                                        <input asp-for="AdUrl" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"><br />
                                    </div>
                                    <span asp-validation-for="AdUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div><br />
                        <!--end row-->
                        <div class="vstack gap-3">
                            <label asp-for="IdType" class="form-label">Type Campaign</label>
                            <select asp-for="IdType" asp-items="@Model.types" class="js-example-disabled" required>
                                <option value="AL">Choisir Type</option>
                            </select>
                            <span asp-validation-for="IdType" class="text-danger"></span>

                            <label asp-for="IdPublisher" class="form-label">Publisher</label>
                            <select asp-for="IdPublisher" asp-items="@Model.publishers" class="js-example-disabled" required>
                                <option value="AL">Choisir Publisher</option>
                            </select>
                            <span asp-validation-for="IdPublisher" class="text-danger"></span>

                            <label asp-for="IdAgeRange" class="form-label">Age Range</label>
                            <select asp-for="IdAgeRange" asp-items="@Model.ageRanges" class="js-example-disabled" required>
                                <option value="AL">Choisir Range</option>
                            </select>
                            <span asp-validation-for="IdAgeRange" class="text-danger"></span>

                            <label asp-for="IdLocation" class="form-label">Location</label>
                            <select asp-for="IdLocation" asp-items="@Model.locations" class="js-example-disabled" required>
                                <option value="AL">Choisir Location</option>
                            </select>
                            <span asp-validation-for="IdLocation" class="text-danger"></span>
                        </div><br />
                        <!--end row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div>
                                    <label for="DateDebut" class="form-label">OS</label>
                                    <div>
                                        @foreach (var plateform in Model.Os)
                                        {
                                            <div class="asp-form-check mb-3">
                                                <input name="oschoix" value="@plateform.Id" class="form-check-input" type="checkbox" id="asp-formCheck6">
                                                <label class="form-check-label">
                                                    @plateform.Libelle
                                                </label>
                                            </div>
                                        }
                                        <span asp-validation-for="oschoix" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div><br />
                        <!--end row-->
                        
                        <div class="row g-3">
                            <div class="col-lg-6">
                                @*
                                <label asp-for="DateDebut" class="form-label">Importer Image or Video</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" id="inputGroupFile04"
                                           aria-describedby="inputGroupFileAddon04"
                                           aria-label="Upload">
                                    <button class="btn btn-outline-success" type="button"
                                            id="inputGroupFileAddon04">
                                        Button
                                    </button>
                                </div><br />
                                *@
                                <div class="hstack gap-2 mt-3">
                                    <button type="submit" class="js-programmatic-enable btn btn-success">
                                        Ajouter
                                    </button>
                                    <a asp-controller="Ads" asp-action="Index" type="button" class="btn btn-danger">
                                        Annuler
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end col-->
    </div>
</form>




@section scripts {
    <!-- prismjs plugin -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!--select2 cdn-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="~/assets/js/pages/select2.init.js"></script>


    <script src="~/assets/libs/prismjs/prism.js"></script>
    <script src="~/assets/js/app.js"></script>
}