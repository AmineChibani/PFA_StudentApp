@{
    ViewBag.Title = "Se Connecter";
    Layout = null;
}
@model LoginVM
<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="ladylip" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>
<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay" style="background:linear-gradient(to right, #feafae, #ff6666)!important;"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="text-center mt-sm-5 mb-4 text-white-50">
                                <div>
                                    <a href="@Url.Action("Analytics", "Dashboard1")" class="d-inline-block auth-logo">
                                        <img src="~/assets/images/web gestion icon.png" alt="" height="70">
                                    </a>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Bienvenue de nouveau !</h5>
                                    <p class="text-muted">Connectez-vous pour continuer sur Lytrack.</p>
                                </div>
                                <div class="p-2 mt-4">
                                    <form method="post">
                                        @if (ViewBag.utilisateurExist != null)
                                        {
                                            <div id="errorMessage" class="alert alert-danger" role="alert">
                                                <span class="text-danger">L'adresse e-mail ou le mot de passe est incorrect.</span>
                                            </div>

                                        }
                                        <div class="form-group">
                                            <label asp-for="email" class="control-label"></label>
                                            <input type="text" asp-for="email" class="form-control" placeholder="Email" />
                                            <span asp-validation-for="email" class="text-danger"></span>
                                        </div><br />

                                        <div class="form-group">
                                            <label asp-for="Password" class="control-label"></label>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div style="margin-top:13px" class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                            <label class="form-check-label" for="auth-remember-check">Se souvenir de moi</label>
                                        </div>

                                        <div class="mt-4">
                                            <input value="Se Connecter" class="btn btn-success w-100" type="submit"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">&copy;
                            <script>document.write(new Date().getFullYear())</script> Lytrack. <i class="mdi mdi-heart text-danger"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->

    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>
    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>

</body>
</html>